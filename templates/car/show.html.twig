{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Model car</th>
                <td>{{ car.modelCar }}</td>
            </tr>
            <tr>
                <th>Brand car</th>
                <td>{{ car.brandCar }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ car.colorCar }}</td>
            </tr>
            <tr>
                <th>Driver</th>
                <td>{{ car.drivers | join(",")}}</td>
            </tr>
            <tr>
                <th>Garage</th>
                <td>{{ car.garage }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('car_index') }}">back to list</a>

    <a href="{{ path('car_edit', {'id': car.id}) }}">edit</a>

    {{ include('car/_delete_form.html.twig') }}
{% endblock %}
